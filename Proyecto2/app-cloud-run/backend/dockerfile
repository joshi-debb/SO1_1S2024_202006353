# Define la imagen base de Node.js 18.16.0 en su versi√≥n "alpine"
FROM node:18.16.0-alpine

WORKDIR /usr/src/app

COPY package*.json ./

RUN npm install

COPY . .

EXPOSE 8000

CMD ["node", "src/app.js"]

